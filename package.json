{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint": "npm run lint:client && npm run lint:server",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "lint:client": "npm --workspace client run lint",
    "lint:fix:client": "npm --workspace client run lint:fix",
    "lint:server": "npm --workspace server run lint",
    "lint:fix:server": "npm --workspace server run lint:fix",
    "dev:server": "npm --workspace server run start:dev",
    "dev:client": "npm --workspace client run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:server": "rimraf server/dist",
    "clean:client": "rimraf client/.next client/out",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HikkiMakoto/portfolio.git"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1"
  }
}
